# School Management API - Production Environment Configuration
# Copy this file to .env and configure for your production environment

# JWT Secrets - Can be generated with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
LONG_TOKEN_SECRET=<generate-64-char-hex-string>
SHORT_TOKEN_SECRET=<generate-64-char-hex-string>
NACL_SECRET=<generate-64-char-hex-string>

# MongoDB Connection String
MONGO_URI=mongodb://school-mongodb:27017/school_management

# Redis Connection String
REDIS_URI=redis://school-redis:6379

# Environment
NODE_ENV=production

# Service Configuration
SERVICE_NAME=school-management-api
USER_PORT=5111

# Redis Prefixes (change if running multiple instances)
CACHE_PREFIX=sms:cache
CORTEX_PREFIX=sms:cortex
OYSTER_PREFIX=sms:oyster

# Separate Redis instances (optional - defaults to REDIS_URI)
# CORTEX_REDIS=redis://school-redis:6379
# OYSTER_REDIS=redis://school-redis:6379
# CACHE_REDIS=redis://school-redis:6379