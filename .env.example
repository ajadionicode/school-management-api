# School Management API - Environment Configuration
# Copy this file to .env and fill in the values

# Service Configuration
SERVICE_NAME=school-management-api
ENV=development
USER_PORT=5111

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/school_management

# Redis Configuration (required for Cortex, Oyster, and Cache)
REDIS_URI=redis://127.0.0.1:6379

# Optional: Separate Redis instances for different services
# CORTEX_REDIS=redis://127.0.0.1:6379
# OYSTER_REDIS=redis://127.0.0.1:6379
# CACHE_REDIS=redis://127.0.0.1:6379

# JWT Secrets
LONG_TOKEN_SECRET=your-long-token-secret-min-32-chars
SHORT_TOKEN_SECRET=your-short-token-secret-min-32-chars
NACL_SECRET=your-nacl-secret-base64-encoded

# Cache Configuration
CACHE_PREFIX=sms:cache
CORTEX_PREFIX=sms:cortex
OYSTER_PREFIX=sms:oyster

# Testing
TEST_MONGO_URI=mongodb://localhost:27017/school_management_test

# Rate Limiting (optional - defaults shown)
# RATE_LIMIT_WINDOW_MS=900000        # 15 minutes in milliseconds
# RATE_LIMIT_GLOBAL=100              # Max requests per window (global)
# RATE_LIMIT_AUTH=5                  # Max requests per window (auth endpoints)

# Login Security (optional - defaults shown)
# MAX_LOGIN_ATTEMPTS=5               # Failed attempts before lockout
# LOCKOUT_DURATION_MS=900000         # 15 minutes in milliseconds

# Superadmin Seed (optional - can also use CLI args)
# SUPERADMIN_USERNAME=superadmin
# SUPERADMIN_EMAIL=admin@example.com
# SUPERADMIN_PASSWORD=YourSecurePassword123
